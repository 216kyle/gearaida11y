<main class="site-content site-content--has-sidebar site-content--sidebar-right" role="main">
  {% include 'page-utility' %}
  <div class="site-container site-flexbox">
    <section class="page-main">
      <header class="page-header">
        <h1>{{ page.title }}</h1>
      </header><!-- page-header -->
      <div class="page-content">
        {{ page.content }}
      </div><!-- page-content -->
    </section><!-- page-main -->
    <aside id="page-sidebar">
      {% include 'widget-navigation' %}
    </aside><!-- page-sidebar -->
  </div><!-- site-container -->
</main><!-- site-content -->