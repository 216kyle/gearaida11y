{% include 'page-utility' %}
<div class="site-container">
  <section class="page-main">
    <header class="page-header">
      <h1 role="heading" >{{ page.title }}</h1>
    </header><!-- page-header -->
    <div class="page-content">
      <p aria-label="" class="lead">Create your password to activate your account</p>
      {% form 'activate_customer_password' %}
      {{ form.errors | default_errors }}
      <div class="form__fieldrow" id="password">
        <label aria-label="Enter a Password" class="large" for="password">Password</label><br>
        <input type="password" value="" name="customer[password]" id="customer_password" size="30" />
      </div>
      <div class="form__fieldrow" id="password_confirm">
        <label aria-label="Repeat Password" class="large" for="password_confirmation">Password Confirmation</label><br>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" size="30" />
      </div>
      <div class="form__actions">
        <input class="btn" type="submit" value="Activate Account" />
        <span class="note">or</span>
        <input role="button" type="submit" class="btn-alt" name="decline" id="customer_decline" value="Decline Invitation" />
      </div>
      {% endform %}
    </div><!-- page-content -->
  </section><!-- page-main -->
</div><!-- site-container -->