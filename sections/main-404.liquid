{% include 'page-utility' %}
<div class="site-container site-flexbox {% if settings.layout_sidebar_location == 'left' %}site-flexbox--reversed{% endif %}">
  <section class="page-main">
    <header class="page-header">
      <h1>Nothing found - 404</h1>
    </header><!-- page-header -->
    <div class="page-content">
      <p>Sorry, there was nothing found for that specific request. You can try searching below or <a href="{{ shop.url }}">return to our homepage</a>.</p>
      <hr/>
      <h4>Search {{ shop.name }}</h4>
      <form id="search-404-form" action="/search" class="form form--compact clearfix" method="get">
        <div class="form__fieldset">
          <input type="text" name="q" value="{{search.terms | escape}}" size="25" />
          <input type="submit" class="btn" value="Search" />
        </div><!-- form__fieldset -->
      </form><!-- form -->
    </div><!-- page-content -->
  </section><!-- page-main -->
</div><!-- site-container -->

