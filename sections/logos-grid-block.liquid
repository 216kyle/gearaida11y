{
  "name": "Logos grid",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Logo 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Logo 2"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Logo 3"
    },
    {
      "type": "image_picker",
      "id": "image4",
      "label": "Logo 4"
    },
    {
      "type": "image_picker",
      "id": "image5",
      "label": "Logo 5"
    },
    {
      "type": "image_picker",
      "id": "image6",
      "label": "Logo 6"
    },
      {
      "type":"checkbox",
      "id":"padding_top",
      "label":"Padding Top?",
      "default":true
    },
    {
      "type":"checkbox",
      "id":"padding_bottom",
      "label":"Padding Bottom?",
      "default":true
    },
    {
      "type":"checkbox",
      "id":"border_top",
      "label":"Border Top?",
      "default":false
    },
    {
      "type":"checkbox",
      "id":"border_bottom",
      "label":"Border Bottom?",
      "default":false
    }
  ],
 "presets": [
   {
     "name": "Logos grid"
   }
 ]
}
{% endschema %}