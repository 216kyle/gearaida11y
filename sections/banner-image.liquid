<div class="section section--banner-image section--banner-image-{{ section.id }}">
  <div class="site-container">
    <div class="banner-image-container {% if section.settings.image_mobile %}banner-image--has-mobile{% endif %}{% if section.settings.border_top %} banner-image--border-top{% endif %}{% if section.settings.border_bottom %} banner-image--border-bottom{% endif %}">
      <div class="banner-image__image">
        <img class="lazy" data-srcset="{{ section.settings.image | img_url: '2400x' }} 2x, {{ section.settings.image | img_url: '1200x' }} 1x" data-src="{{ section.settings.image | img_url: '400x' }}" alt="{{ section.settings.image.alt | escape }}"  />
        {% if section.settings.image_mobile %}<img class="lazy mobile" data-srcset="{{ section.settings.image_mobile | img_url: '800x' }} 2x, {{ section.settings.image_mobile | img_url: '400x' }} 1x" data-src="{{ section.settings.image_mobile | img_url: '200x' }}" alt="{{ section.settings.image_mobile.alt | escape }} mobile" />{% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner image",
  "settings": [
    {
      "type":"checkbox",
      "id":"border_top",
      "label":"Border Top?",
      "default":false
    },
    {
      "type":"checkbox",
      "id":"border_bottom",
      "label":"Border Bottom?",
      "default":true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    }
  ],
  "presets": [
    {
      "name": "Banner image"
    }
  ]
}
{% endschema %}