{% for block in section.blocks %}
  {% if block.type == 'product_video' %}
    <style>
      .video__bkgd--{{ block.id }} {background-size:cover;background-position:center;background-color:#fafafa;opacity:0;-webkit-transition: all 0.3s ease !important;-moz-transition: all 0.3s ease !important;-ms-transition: all 0.3s ease !important;transition: all 0.3s ease !important;}
      .video__bkgd--{{ block.id }}.lazyloaded,
      .video__bkgd--{{ block.id }}[data-was-processed="true"] {opacity:1;}
      @media screen and (min-width: 151px) and (max-width: 300px) {
        .video__bkgd--{{ block.id }} {background-image: url('{{ block.settings.video_img | img_url: '600x' }}');}
      }
      @media screen and (min-width: 301px) and (max-width: 600px) {
        .video__bkgd--{{ block.id }} {background-image: url('{{ block.settings.video_img | img_url: '800x' }}');}
      }
      @media screen and (min-width: 601px) and (max-width: 800px) {
        .video__bkgd--{{ block.id }} {background-image: url('{{ block.settings.video_img | img_url: '900x' }}');}
      }
      @media screen and (min-width: 801px) and (max-width: 1000px) {
        .video__bkgd--{{ block.id }} {background-image: url('{{ block.settings.video_img | img_url: '1200x' }}');}
      }
      @media screen and (min-width: 1001px) {
        .video__bkgd--{{ block.id }} {background-image: url('{{ block.settings.video_img | img_url: '1200x' }}');}
      }
    </style>
  {% endif %}
{% endfor %}
