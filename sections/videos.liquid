{% schema %}
{
  "name": "Product Videos",
  "settings": [
    {
      "type": "textarea",
      "id": "featured_video_embed",
      "label": "Featured Video Embed Code"
    }
  ],
  "blocks": [
    {
      "type": "product_video",
      "name": "Product Video",
      "settings": [
        {
          "type": "image_picker",
          "id": "video_img",
          "label": "Video preview image."
        },
        {
          "type": "text",
          "id": "video_id",
          "label": "Video ID",
          "info": "11 character ID found at end of youtube video URL"
        },
        {
          "type": "radio",
          "id": "video_section",
          "options": [
            {"value": "aquaseal", "label": "Aquaseal"},
            {"value": "seam_grip", "label": "Seam Grip"},
            {"value": "revivex", "label": "Revivex"},
            {"value": "tenacious_tape", "label": "Tenacious Tape"},
            {"value": "adventure_tools", "label": "Adventure Tools"},
            {"value": "other", "label": "Other"}
          ],
          "label": "Video Section"
        }
      ]
    }
  ]
}
{% endschema %}