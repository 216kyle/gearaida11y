<div class="site-content" role="main">
  {% if section.settings.header_image != blank %}
    <style>
      .sales-doc__header {opacity:0;-webkit-transition: all 0.3s ease !important;-moz-transition: all 0.3s ease !important;-ms-transition: all 0.3s ease !important;transition: all 0.3s ease !important;}
      .sales-doc__header.lazyloaded,
      .sales-doc__header[data-was-processed="true"] {opacity:1;}
      @media screen and (max-width: 150px) {
          .sales-doc__header {background-image: url('{{ section.settings.header_image | img_url: '300x' }}');}
        }
        @media screen and (min-width: 151px) and (max-width: 300px) {
          .sales-doc__header {background-image: url('{{ section.settings.header_image | img_url: '600x' }}');}
        }
        @media screen and (min-width: 301px) and (max-width: 600px) {
          .sales-doc__header {background-image: url('{{ section.settings.header_image | img_url: '900x' }}');}
        }
        @media screen and (min-width: 601px) and (max-width: 800px) {
          .sales-doc__header {background-image: url('{{ section.settings.header_image | img_url: '1200x' }}');}
        }
        @media screen and (min-width: 801px) and (max-width: 1000px) {
          .sales-doc__header {background-image: url('{{ section.settings.header_image | img_url: '1400x' }}');}
        }
        @media screen and (min-width: 1001px) and (max-width: 1500px) {
          .sales-doc__header {background-image: url('{{ section.settings.header_image | img_url: '2000x' }}');}
        }
        @media screen and (min-width: 1501px) {
          .sales-doc__header {background-image: url('{{ section.settings.header_image | img_url: '3000x' }}');}
        }
      }
    </style>
    <header class="sales-doc__header lazy">
      <div class="hero-title">
        <h1 class="article-title" itemprop="name">{{ page.title }}</h1>
        <p>{{ page.content }}</p>
      </div>
    </header>
  {% endif %}
  <div class="site-container--slim site-container--sales-documentation site-flexbox">
    <div class="page-main">
      <div class="page-content">
        <div class="site-flexbox grid">
          <article itemscope itemtype="http://schema.org/Article">
            {% if section.settings.header_image == blank %}
              <header class="page-header">
                <h1 class="article-title" itemprop="name">{{ page.title }}</h1>
                <p>{{ page.content }}</p>
              </header><!-- page-header -->
            {% endif %}
            <div class="document-section sales-materials">
              {% for block in section.blocks %}
                {% if block.type == 'sales_material' %}
                  <div class="material">
                    <img class="material-image" src="{{ block.settings.image | img_url:'200x400' }}" alt="{{ block.settings.title }}" />
                    <div class="material-header">
                      <h2>{{ block.settings.title }}</h2>
                      <a href="{{ block.settings.doc_url }}" target="_blank" download title="Sales Material">Download</a>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% comment %}  <div class="document-section clearfix">
              <h2>Aquaseal</h2>
