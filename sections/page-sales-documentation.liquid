                  <div class="doc-wrapper">
                    <a href="{{ block.settings.doc_url }}" target="_blank" download title="Sales Doc"><span class="doc-title">{{ block.settings.title }}</span><span class="doc-download"><svg viewBox="0 0 15.09 25.21" xmlns="http://www.w3.org/2000/svg"><g fill="none" stroke="#ff4001"><path d="m7.37.5h-6.87v18.32h14.09v-11.1" stroke-miterlimit="10"/><path d="m7.37 7.72h7.22l-7.22-7.22z" stroke-linejoin="round"/><g stroke-linecap="round" stroke-miterlimit="10"><path d="m9.48 22.42-2.08 2.08-2.08-2.08"/><path d="m7.4 24.15v-10.3"/></g></g></svg> Download</span></a>
                  </div>
                {% endif %}
              {% endfor %}
            </div> {% endcomment %}
          </article>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Sales Documentation",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Hero Image",
      "info": "Image should be 3000px x 1000px, leave blank to hide"
    }
  ],
  "blocks": [
    {
      "type": "sales_doc",
      "name": "Sales Doc",
      "settings": [
        {
        "type": "text",
        "id": "title",
        "label": "Doc Title"
        },
        {
          "type": "text",
          "id": "doc_url",
          "label": "Doc URL",
          "info": "Copy and paste url from files section in the Shopify admin, settings -> files"
        },
        {
          "type": "radio",
          "id": "doc_section",
          "options": [
            {"value": "aquaseal", "label": "Aquaseal"},
            {"value": "seam_grip", "label": "Seam Grip"},
            {"value": "revivex", "label": "Revivex"},
            {"value": "tenacious_tape", "label": "Tenacious Tape"},
            {"value": "adventure_tools", "label": "Adventure Tools"},
            {"value": "heroclip","label": "Heroclip"},
            {"value": "other", "label": "Other"}
          ],
          "label": "Doc Section"
        }
      ]
    },
    {
      "type": "sales_material",
      "name": "Sales Material",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Sales Material Title"
        },
        {
          "type": "text",
          "id": "doc_url",
          "label": "Sales Material URL",
          "info": "Copy and paste url from files section in the Shopify admin, settings -> files"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Sales Material Image",
          "info": "Image should be 200px x 400px"
        }
      ]
    }
  ]
}
{% endschema %}