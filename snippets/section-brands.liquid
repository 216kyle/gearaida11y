      </a>
    </div>
    <div class="brand">
      <a href="{{ block.settings.link_3 }}" title="{{ block.settings.text_3 }}">
        <img src="{{ block.settings.image_3 | img_url: '600x' }}" alt="{{ block.settings.image_3.alt }}" />
        <span>{{ block.settings.text_3 }}</span>
      </a>
    </div>
    <div class="brand">
      <a href="{{ block.settings.link_4 }}" title="{{ block.settings.text_4 }}">
        <img src="{{ block.settings.image_4 | img_url: '600x' }}" alt="{{ block.settings.image_4.alt }}" />
        <span>{{ block.settings.text_4 }}</span>
      </a>
    </div>
  </div>
</section>
