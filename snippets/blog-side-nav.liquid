{% assign current_page = '' %}
{% if template == 'blog.all' %}
  {% for tag in current_tags %}
    {% case tag %}
      {% when 'Camping' %}
        {% assign current_page = 'camping' %}
      {% when 'Hike Run' %}
        {% assign current_page = 'hike_run' %}
      {% when 'hunt fish' %}
        {% assign current_page = 'hunt_fish' %}
      {% when 'paddle dive' %}
        {% assign current_page = 'paddle_dive' %}
      {% when 'snow' %}
        {% assign current_page = 'snow' %}
      {% when 'gear care' %}
        {% assign current_page = 'gear_care' %}
    {% endcase %}
  {% endfor %}
{% elsif template == 'article' %}
  {% for tag in article.tags %}
    {% case tag %}
      {% when 'Camping' %}
        {% assign current_page = 'camping' %}
        {% break %}
      {% when 'Hike Run' %}
        {% assign current_page = 'hike_run' %}
        {% break %}
      {% when 'hunt fish' %}
        {% assign current_page = 'hunt_fish' %}
        {% break %}
      {% when 'paddle dive' %}
        {% assign current_page = 'paddle_dive' %}
        {% break %}
      {% when 'snow' %}
        {% assign current_page = 'snow' %}
        {% break %}
      {% when 'gear care' %}
        {% assign current_page = 'gear_care' %}
        {% break %}
    {% endcase %}
  {% endfor %}
{% endif %}

<div class="page-sidebar blog-page-sidebar learn-blog-sidebar">
