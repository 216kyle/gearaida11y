  <div class="page-sidebar__section {% if current_page == '' or current_page == 'gear_care' %}active{% endif %}">
    <h3 role="heading" aria-label="Gear Care and Repair Articles" >Gear Care &amp; Repair <span class="toggle">{% if current_page == '' or current_page == 'gear_care' %}-{% else %}+{% endif %}</span></h3>
    <ul class="page-sidebar__navigation">
      {% assign article_counter = 0 %}
      {% assign tag = 'gear care' %}
      {% for article in blogs.learn.articles %}
        {% if article.tags contains tag %}
          <li><a role="button" aria-label="{{ article.title | escape }}" href="{{ article.url }}">{{ article.title | escape }}</a></li>
          {% assign article_counter = article_counter | plus: 1 %}
          {% if article_counter >= 5 %}{% break %}{% endif %}
